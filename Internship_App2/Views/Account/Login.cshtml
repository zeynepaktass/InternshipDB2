@model Internship_App2.Models.UserDto
@{
    var userType = TempData["UserType"] as string;
}
@{
    ViewBag.Title = "Login";
}

<style>
    .div-center {
        width: 26%;
        height: 100%;
        background-color: #F5F2F2;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: auto;
        max-width: 100%;
        max-height: 100%;
        overflow: auto;
        padding: 1em 2em;
        border-bottom: 2px solid #ccc;
        display: table;
    }

    div.content {
        display: table-cell;
    }

    .deneme1 {
        margin-top: 13rem;
    }

    #deneme123 {
        filter: blur(4px);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <img id="deneme123" src="~/Assets/kultur.png" />
        <div class="div-center bshadow-lg bg-white rounded">
            <div class="content">
                <img class="deneme1" width="50%" src="~/Assets/istanbul-kultur-universitesi-logo.png" />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kullanıcı Adı</label>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Şifre</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-danger">Giriş / Log In</button>
                    <hr />
                    <a class="mr-4" href="https://orion.iku.edu.tr/irj/servlet/prt/portal/prtroot/pcd!3aportal_content!2fkultur!2fKulturMobile!2fFiori?sap-config-mode=true" target="_blank">
                        <img width="40%" src="~/Assets/orionbannerlogo.png" />
                    </a>
                    <a href="https://cats.iku.edu.tr/portal" target="_blank">
                        <img width="40%" src="~/Assets/logo-jewel.png" />
                    </a>
                </form>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(userType))
    {
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function () {
                var userType = '@userType';
                if (userType === 'Admin') {
                    localStorage.setItem('loginType', 'admin login');
                } else if (userType === 'Student') {
                    localStorage.setItem('loginType', 'student login');
                } else if (userType === 'Advisor') {
                    localStorage.setItem('loginType', 'advisor login');
                }
            });
        </script>
    }
}